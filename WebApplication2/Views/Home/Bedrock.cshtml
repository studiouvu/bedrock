                    </div>
                    <div style="min-height: 5px;">
                    </div>
                    <div style="max-width: 100%; display: flex; align-items: center;">
                        <div onclick="Hello()"
                             style="cursor: pointer; width: 18px; height: 18px; border: solid #cdd0d4;  border-width:1px; margin-right: 4px; border-radius: 5px;">
                        </div>
                        <div class="input-box" style="width: 100%; overflow-wrap: break-word;">
                            <div style="width: 100%; height: 100%; margin-left: 10px; margin-right: 10px;">
                                <input id="input1" type="text" placeholder="> ..."/>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts
{
    <script type="text/javascript">
    $(function () {
        $.ajax({
            type: "POST",
            url: '@Url.Action("ReceiveContent")',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#tblContent').html(data);
            },
            error: function (data) {
                $('#tblContent').html("fail");
            }
        });

        document.addEventListener('keydown', function (event) {
            var key = event.key || event.keyCode;

            if (key == 'Enter') {
                SendText();
            }
            return false;
        });
    });

    function ClickDone(id) {
        console.log("ClickDone");

        $.ajax({
            type: "POST",
            url: '@Url.Action("ClickDone")',
            data: JSON.stringify({data: id}),
            dataType: 'text',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#tblContent').html(data);
            },
            error: function (data) {
                $('#tblContent').html("fail");
            }
        });
    }

    function SendText() {
        let typped = document.getElementById('input1').value;
        document.getElementById('input1').value = '';

        $.ajax({
            type: "POST",
            url: '@Url.Action("ReceiveText")',
            data: JSON.stringify({data: typped}),
            dataType: 'text',
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $('#tblContent').html(data);
            },
            error: function (data) {
                $('#tblContent').html("fail");
            }
        });
    }
</script>
}

