<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
    <meta name="viewport"
          content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no, viewport-fit=cover">
    <title id="title-name">Bedrock</title>
    <meta property="og:title" content="@ViewData["Title"]">
    <meta property="og:image" content="~/images/og.png">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css"/>
    <link rel="stylesheet" href="~/Bedrock.styles.css" asp-append-version="true"/>
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true"/>
    <link rel="icon" type="image/png" href="~/favicon.png"/>
    <style>
        html, body {
            scroll-behavior: smooth;
            -webkit-overflow-scrolling: touch; /* iOS 부드러운 스크롤 */
        }
    </style>
</head>
<body style="font-family: apple; background-color: #0f0f0f;">
<font color="#d9d9d9">
    <div
        style="min-height: 200px; width: 100%; position: absolute; z-index: -1; bottom: 0; left: 0; background-image: linear-gradient(to top, #13170f, #0f0f0f);"></div>
    <div class="hide-on-small" style="min-height: 46px"></div>
    <div class="display-on-small" style="min-height: 24px"></div>
    <main role="main" class="pb-3">
        @RenderBody()
    </main>
    <div style="min-height: 200px; width: 100%;"></div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</font>
</body>
</html>